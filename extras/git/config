[alias]
    g = !flatpak run org.gnome.gitg
    adi = add *
    cam = commit -am
[color]
    ui = auto
[pull]
    rebase = true
[rebase]
    autoStash = true
[blame]
    ignoreRevsFile = .git-blame-ignore-revs
[push]
    autoSetupRemote = true
[protocol "file"]
    allow = always
[init]
    defaultBranch = master
